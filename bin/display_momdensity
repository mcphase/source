#!/bin/bash

echo "--------------------------------------"
echo "graphic package to display total moment density"
echo "--------------------------------------"
echo "arguments as for momdensplt:"
if test -f results/momdensplt.jvx
 then
  rm results/momdensplt.jvx
 fi

echo "# this is initial graphic parameters file" > results/graphic_parameters.set
while test -f results/graphic_parameters.set
do
  momdensplt $*
if test -f results/momdensplt.jvx
then
 java javaview results/momdensplt.jvx &
rem1=$!
java displaycontour 2 3 4 results/momdensplti.grid &
rem2=$!
java displaycontour 1 3 4 results/momdenspltj.grid &
rem3=$!
 java displaycontour 1 2 4 results/momdenspltk.grid &
rem4=$!
 java graphic_parameters_configurator 
kill $rem1
kill $rem2
kill $rem3
kill $rem4
else
  rm results/graphic_parameters.set
fi
done

