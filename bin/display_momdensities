#!/bin/bash

echo "--------------------------------------"
echo "graphic package to display total moment density"
echo "--------------------------------------"
echo "arguments as for momdensities:"
if test -f results/momdensities.jvx
 then
  rm results/momdensities.jvx
fi

echo "# this is initial graphic parameters file" > results/graphic_parameters.set
while test -f results/graphic_parameters.set
do
 momdensities $*
if test -f results/momdensities.jvx
then
 java javaview results/momdensities.jvx &
rem1=$!

 java graphic_parameters_configurator 
kill $rem1

else
  rm results/graphic_parameters.set
fi
done
