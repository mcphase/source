#!/bin/bash

echo "--------------------------------------"
echo "graphic package to display orbital moment density"
echo "--------------------------------------"
echo "arguments as for orbmomdensplt:"
if test -f  results/orbmomdensplt.jvx
 then
  rm results/orbmomdensplt.jvx
 fi

echo "# this is initial graphic parameters file" > results/graphic_parameters.set
while test -f results/graphic_parameters.set
do
 orbmomdensplt $*
if test -f results/orbmomdensplt.jvx
then
 java javaview results/orbmomdensplt.jvx &
rem1=$!
 java displaycontour 2 3 4 results/orbmomdensplti.grid &
rem2=$!
 java displaycontour 1 3 4 results/orbmomdenspltj.grid &
rem3=$!
 java displaycontour 1 2 4 results/orbmomdenspltk.grid &
rem4=$!
java graphic_parameters_configurator 
kill $rem1
kill $rem2
kill $rem3
kill $rem4
else
  rm results/graphic_parameters.set
fi
done
